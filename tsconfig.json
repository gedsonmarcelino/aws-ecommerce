{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "es2022"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/products/*": [
        "lambda/products/layers/productsLayer/nodejs/*",
        "lambda/products/layers/productEventsLayer/nodejs/*"
      ],
      "/opt/nodejs/orders/*": [
        "lambda/orders/layers/ordersLayer/nodejs/*",
        "lambda/orders/layers/ordersEventsLayer/nodejs/*",
        "lambda/orders/layers/ordersApiLayer/nodejs/*",
        "lambda/orders/layers/ordersEventsRepositoryLayer/nodejs/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
